# Maintainer: Stephane Sezer <sas@cd80.net>

_pkgname='hkd'
pkgname="${_pkgname}-git"
pkgver=0.0.0
pkgrel=1
pkgdesc='Handle keyboard hot keys independantly of X.'
arch=('any')
_url="github.com/sas/${_pkgname}"
url="https://${_url}"
license=('BSD')
depends=('')
makedepends=('git' 'ruby-ronn')
source=("repo::git://${_url}")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/repo"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build () {
  cd "${srcdir}/repo"
  make all
}

package () {
  cd "${srcdir}/repo"
  make PREFIX="${pkgdir}/usr" install
  install -t /etc etc/hkd.conf
  install -t /usr/lib/systemd/system etc/hkd.service
}
